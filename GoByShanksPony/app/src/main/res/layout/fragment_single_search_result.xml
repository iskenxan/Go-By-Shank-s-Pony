<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/SingleSearchResultImageView"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_height="30dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="24sp"
            android:text="$2500"
            android:textColor="@color/text_color_price"
            android:gravity="center"
            android:id="@+id/SingleSearchResultRentTextView"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="23sp"
            android:text="|"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="1"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="24sp"
                android:id="@+id/SingleSearchResultBathroomsTextView"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="2dp"
                android:layout_height="30dp"
                android:src="@drawable/bed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="1"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="24sp"
                android:id="@+id/SingleSearchResultBedroomsTextView"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/toilet"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:height="50dp"
            android:textColor="@color/text_color_light"
            android:id="@+id/SingleSearchResultNameTextView"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="2802 W 64 Street, Tulsa, OK"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_below="@id/SingleSearchResultNameTextView"
            android:id="@+id/SingleSearchResultAddressTextView"
            android:layout_height="20dp"/>
        <com.getbase.floatingactionbutton.AddFloatingActionButton
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/semi_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_plusIconColor="@android:color/white"
            fab:fab_colorNormal="@color/text_color_light"
            fab:fab_colorPressed="@color/text_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"/>
    </RelativeLayout>

</LinearLayout>